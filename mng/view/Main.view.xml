<core:View
    controllerName="csr.mng.controller.Main"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <SplitApp>
        <masterPages>
            <Page
                title="Approve Marathon">
                <content>
                    <SearchField
                        id="searchEvent"
                        search="onListSearchPressed"
                        liveChange="onListSearchLiveChanged">
                    </SearchField>
                    <!-- , filters: [{path: 'Status', operator: 'eq', value1:'Submitted'}] -->
                    <List
                        id="registrationList"
                        noDataText="no registration"
                        mode="SingleSelectMaster"
                        selectionChange="onListSelectionChanged">
                    </List>
                </content>
                 <footer> <Bar>
                <contentRight>
                    <Button
                        text="Sort"
                        type="Emphasized"
                        icon="sap-icon://sort"
                        id="sortBtn"
                        />
                    </contentRight>
                </Bar>
            </footer>
            </Page>
        </masterPages>
        <detailPages>
            <core:Fragment
                fragmentName="csr.mng.view.Detail"
                type="XML">
            </core:Fragment>
        </detailPages>
    </SplitApp>
</core:View>