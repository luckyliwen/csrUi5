<core:View
    controllerName="csr.mng.controller.Main"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <SplitApp>
        <masterPages>
            <Page
                title="Approve Registration">
                <content>
                   <!--  <SearchField
                        id="searchEvent"
                        search="onListSearchPressed"
                        liveChange="onListSearchLiveChanged">
                    </SearchField> -->
                    <!-- , filters: [{path: 'Status', operator: 'eq', value1:'Submitted'}] -->
                    <SegmentedButton  id="segmentBtn"
                        width="100%"
                        select="onNormalVipSegmentSelected">
                        <buttons>
                            <Button
                                text="Normal"
                                id="normalSegment"
                                press="onNormalOrVipSegmentSelected">
                            </Button>
                            <Button
                                text="VIP"
                                id="vipSegment"
                                press="onNormalOrVipSegmentSelected">
                            </Button>
                        </buttons>
                    </SegmentedButton>

                    <List
                        id="registrationList"
                        noDataText="no registration"
                        mode="SingleSelectMaster"
                        selectionChange="onListSelectionChanged">
                    </List>
                </content>
                 <footer> <Bar>
                <contentRight>
                    <Button
                        text="Sort"
                        type="Emphasized"
                        icon="sap-icon://sort"
                        id="sortBtn"
                        />
                    </contentRight>
                </Bar>
            </footer>
            </Page>
        </masterPages>
        <detailPages>
            <core:Fragment
                fragmentName="csr.mng.view.Detail"
                type="XML">
            </core:Fragment>
        </detailPages>
    </SplitApp>
</core:View>