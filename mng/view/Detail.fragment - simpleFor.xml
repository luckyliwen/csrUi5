<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:html="http:www.w3.org1999xhtml"
    xmlns:table="sap.ui.table"
    xmlns:commons="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:mylib="csr.lib"
    xmlns:form="sap.ui.layout.form">

    <Page title="{UserId}  {LastName},{FirstName}  Registration Detail Information" id="detailPage">
    
    <form:SimpleForm id="detailForm" editable="true" 
			labelSpanL="5"  labelSpanM="5"  emptySpanL="0" emptySpanM="0"  columnsL="2"  columnsM="2">
			<form:content>
			<core:Title text="Basic" />
				<!-- <Label text="SAP ID"  required="true" />
				<Input value="{UserId}" enabled="false" editable="false" />

				<Label text="Last Name"  required="true" />
				<Input value="{LastName}"  change="onInputChanged" />
				
				<Label text="First Name"  required="true" />
				<Input value="{FirstName}"  change="onInputChanged" />
 -->
				<Label text="Gender" id="GenderLabel" required="true" />
				<mylib:SelectExt name="Gender"  selectedKey="{Gender}"   id="Gender" />

				<Label text="Email Address" id="EmailLabel" required="true" />
				<Input value="{Email}" id="Email"  change="onInputChanged"/>

				<Label text="Title" id="TitleLabel" required="true" />
				<mylib:SelectExt name="Title" selectedKey="{Title}" id="Title" />

				<Label text="Birthday" id="BirthdayLabel" required="true" />
				<Input value="{path: '/Birthday', formatter: '.fmtBirthday'}" id="Birthday"  type="Date"  
					change="onInputChanged"/>

			<core:Title text="Detail" />
				
				<Label text="Phone"  required="true" />
				<Input value="{Phone}" id="Phone"  change="onInputChanged" />

				<Label text="Distance" id="DistanceLabel" required="true" />
				<mylib:SelectExt name="Distance"  id="Distance" 
					selectedKey="{Distance}" />

				<Label text="TshirtSize" id="TshirtSizeLabel" required="true" />
				<mylib:SelectExt name="TshirtSize"  selectedKey="{TshirtSize}" id="TshirtSize" />

				<Label text="Nationality" id="NationalityLabel" required="true" />
				<mylib:SelectExt name="Nationality"  selectedKey="{Nationality}" id="Nationality" />
												
				<Label text="Team" id="TeamLabel" required="true" />
				<mylib:SelectExt name="Team" selectedKey="{Team}"  id="Team" />

				<Label text="Club" id="ClubLabel" required="true" />
				<mylib:SelectExt name="Club" selectedKey="{Club}" id="Club" />
			</form:content>
		</form:SimpleForm>

		 <footer>
            <Bar>
                <contentRight>
                    <Button
                        text="Approve"
                        type="Accept"
                        icon="sap-icon://approvals"
                        id="approveBtn"
                        press="onApprovePressed"
                        enabled="{path: 'Status', formatter: '.fmtApproveEnableStatus'}"
                        >
                    </Button>
                    <Button
                        text="Reject"
                        type="Reject"
                        icon="sap-icon://employee-rejections"
                        id="rejectBtn"
                        enabled="{path: 'Status', formatter: '.fmtApproveEnableStatus'}"
                        press="onRejectPressed">
                    </Button>
                </contentRight>
            </Bar>
        </footer>

    </Page>
</core:FragmentDefinition>       