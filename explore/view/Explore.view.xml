<core:View
    controllerName="csr.explore.controller.Explore"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" class="sapUiSizeCompact">
<App>
<pages>
    <Page   title="2016 SAP Great Wall Marathon"
        titleLevel="H2">
        <content>
            <IconTabBar expandable="false"  id="iconTabBar"  select="onTconTabBarSelectChanged"
                selectedKey="Registrations">
                <items>
                    <IconTabFilter
                        text="Runners"  key="Registrations"
                        icon="sap-icon://physical-activity">
                        <content>
                            <core:Fragment
                                fragmentName="csr.explore.view.Registration" type="XML">
                            </core:Fragment>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter
                        text="Donations"  key="Donations"
                        icon="sap-icon://simple-payment">
                        <content>
                            <core:Fragment
                                fragmentName="csr.explore.view.Donation" type="XML">
                            </core:Fragment>
                        </content>
                    </IconTabFilter>

                    <IconTabFilter
                        text="Statistics"  key="Statistics"
                        icon="sap-icon://multiple-bar-chart">
                        <content>
                            <core:Fragment
                                fragmentName="csr.explore.view.Statistics" type="XML">
                            </core:Fragment>
                        </content>
                    </IconTabFilter>
                    
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button  id="emailBtn"  enabled="false"  
                        text="Send Email"
                        icon="sap-icon://email"
                        type="Emphasized"
                        press="onSendEmailPressed">
                    </Button>

                    <Button  id="donateBtn"  enabled="false"
                        text="Donate"
                        icon="sap-icon://simple-payment"
                        type="Emphasized"
                        press="onDonatePressed">
                    </Button>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</pages>
</App>
</core:View>