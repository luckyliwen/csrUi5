                    </Title>
                    <ToolbarSpacer />
                    <Button
                        id="ExportBtn-receivedDonationTable"
                        icon="sap-icon://excel-attachment"
                        press="onTableExportPressed">
                    </Button>
                </content>
            </Toolbar>
        </table:toolbar>

        <table:columns>
            <table:Column>
                <table:label>
                    <Label
                        text="Donor ID">
                    </Label>
                </table:label>
                <table:template>
                     <mylib:UserLink 
                        text="{DonatorId}" href="{path: 'DonatorId', formatter: '.fmtUserHref'}" />
                </table:template>
            </table:Column>
            <table:Column>
                <table:label>
                    <Label
                        text="Donor Name">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{DonatorName}">
                    </Text>
                </table:template>
            </table:Column>
            <table:Column>
                <table:label>
                    <Label
                        text="Amount (RMB)">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{Amount}">
                    </Text>
                </table:template>
            </table:Column>

                <table:Column>    
                <table:label>
                    <Label
                        text="Messge">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{Comment}">
                    </Text>
                </table:template>
            </table:Column>
            
        </table:columns>
    </table:Table>

<html:div style="width:2rem" /> 
<table:Table 
        id="givingDonationTable"  visibleRowCount="25"
        >
         <table:toolbar>
            <Toolbar>
