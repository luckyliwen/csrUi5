<table:Table  visibleRowCount="30"  id="teamDonationTable" 
        visible="false"  rows="{/TeamDonation}"
        >
         <table:toolbar>
            <Toolbar>
                <content>
                    <Title
                        text="Donations by Team">
                    </Title>
                    <ToolbarSpacer />
                    <Button
                        id="ExportBtn-teamDonationTable"
                        icon="sap-icon://excel-attachment"
                        press="onTableExportPressed">
                    </Button>
                </content>
            </Toolbar>
        </table:toolbar>
        <table:columns>

            <table:Column>
                <table:label>
                    <Label
                        text="Team ID">
                    </Label>
                </table:label>
                <table:template>
                    <Text text="{TeamId}" />
                </table:template>
            </table:Column>

            <table:Column>
                <table:label>
                    <Label
                        text="Team Name">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{path: 'TeamId', formatter: '.fmtTeam'}">
                    </Text>
                </table:template>
            </table:Column>

             <table:Column  width="50%">
                <table:label>
                    <Label
                        text="Members">
                    </Label>
                </table:label>
                <table:template>
                    <mylib:Member
                        nameList="{path: 'TeamId', formatter: '.fmtTeamMember'}">
                    </mylib:Member>
                </table:template>
            </table:Column>

            <table:Column>
                <table:label>
                    <Label
                        text="Amount (Rmb)">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{Amount}">
                    </Text>
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>

</core:FragmentDefinition>