<core:FragmentDefinition
    xmlns="sap.m"  xmlns:mylib="csr.lib"
    xmlns:table="sap.ui.table"  xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core">

    <Toolbar>
        <content>
            <ToolbarSpacer>
            </ToolbarSpacer>
            <SegmentedButton >
                <buttons> 
                    <Button
                        text="Overall"
                        id="overallSegment" press="onDonationSegmentSelected">
                    </Button>
                    <Button
                        text="Donation by team" press="onDonationSegmentSelected"
                        id="byTeamSegment">
                    </Button>
                     <Button
                        text="By Donor and Runner" press="onDonationSegmentSelected"
                        id="byPeopleSegment">
                    </Button>
                    <Button
                        text="My Donations" press="onDonationSegmentSelected"
                        id="mySegment">
                    </Button>
                </buttons>
            </SegmentedButton>
            <ToolbarSpacer>
            </ToolbarSpacer>
        </content>
    </Toolbar>
    <table:Table  visibleRowCount="30"
        id="donationTable"
        rows="{/Donations}">
         <table:toolbar>
            <Toolbar>
                <content>
                    <Title text="Overall Donations" id="doationTableTitle" />
                    <ToolbarSpacer />
                    <Button
                        id="ExportBtn-donationTable"
                        icon="sap-icon://excel-attachment"
                        press="onTableExportPressed">
                    </Button>
                </content>
            </Toolbar>
        </table:toolbar>
        <table:columns>
            <table:Column>
                <table:label>
                    <Label
                        text="Donor ID">
                    </Label>
                </table:label>
                <table:template>
                      <mylib:UserLink 
                        text="{DonatorId}" href="{path: 'DonatorId', formatter: '.fmtUserHref'}" />
                </table:template>
            </table:Column>
            <table:Column>
                <table:label>
                    <Label
                        text="Donor Name">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{DonatorName}">
                    </Text>
                </table:template>
            </table:Column>
            <table:Column>
                <table:label>
                    <Label
                        text="Donatory">
                    </Label>
                </table:label>
                <table:template>
                     <mylib:UserLink 
                        text="{DonatoryId}" href="{path: 'DonatoryId', formatter: '.fmtUserHref'}" />
                </table:template>
            </table:Column>
             <table:Column>
                <table:label>
                    <Label
                        text="Donatory Name">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{DonatoryName}">
                    </Text>
                </table:template>
            </table:Column>
            <table:Column>
                <table:label>
                    <Label
                        text="Amount (RMB)">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{Amount}">
                    </Text>
                </table:template>
            </table:Column>
           

            <table:Column>
                <table:label>
                    <Label
                        text="Donate Time">
                    </Label>
                </table:label>
                <table:template>
                    <Text
                        text="{path:'ModifiedTime',formatter:'.fmtTime'}">
                    </Text>
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>

<HBox id="myDonationBox"  visible="false">
        <items>
    <table:Table  
